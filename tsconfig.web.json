{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "src/renderer/src/shared/api/*"
      ],
      "@assets/*": [
        "src/renderer/src/assets/*"
      ],
      "@components/*": [
        "src/renderer/src/shared/components/*"
      ],
      "@features/*": [
        "src/renderer/src/features/*"
      ],
      "@hooks/*": [
        "src/renderer/src/shared/hooks/*"
      ],
      "@shared/*": [
        "src/renderer/src/shared/*"
      ],
      "@store/*": [
        "src/renderer/src/shared/store/*"
      ]
    }
  }
}
